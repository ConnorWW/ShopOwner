<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.center.CenterActivity">
    <fragment
        android:id="@+id/title"
        android:name="com.center.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_above="@+id/buttons">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/grey_200">
        <LinearLayout
            android:id="@+id/center_shop_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/center_shop_img"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/shopon"/>

            <!--TextView
                android:id="@+id/center_shop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="服务中心"
                android:textColor="@color/light_blue_400"/-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/center_order_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/center_order_img"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/orderoff"/>

            <!--TextView
                android:id="@+id/center_order_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="订单中心"/-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/center_me_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/center_me_img"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/meoff"/>

            <!--TextView
                android:id="@+id/center_me_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="个人中心"
                /-->
        </LinearLayout>



        <!--
        <Button
            android:id="@+id/center_shop_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="服务中心"/>


        <Button
            android:id="@+id/center_order_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="订单中心"/>
        <Button
            android:id="@+id/center_me_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="个人中心"/>

            -->

    </LinearLayout>
</RelativeLayout>
